{
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "google",
    "rules": {
        "strict": [
            "error",
            "global"
        ],
        "require-jsdoc": "off",
        "quotes": "warn",
        "max-len": [
            "warn",
            {
                "code": 110,
                "ignoreUrls": true
            }
        ],
        "no-throw-literal": "warn",
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "block-spacing": [
            "error",
            "always"
        ],
        "no-unused-vars": "warn",
        "no-undef": "error"
    }
}
